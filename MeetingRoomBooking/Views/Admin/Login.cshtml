@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Image Column -->
        <div class="col-md-6 col-lg-5 d-none d-md-block">
            <div class="text-center">
                <img src="~/images/admin-login.jfif" class="img-fluid" alt="Login Background" style="max-height: 100%; width: 100%; object-fit: cover;">
            </div>
        </div>
        <!-- Form Column -->
        <div class="col-md-6 col-lg-4">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Admin Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        }
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-link">Back to Homepage</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add this to your site's CSS file for custom styling if needed -->
<style>
    .card-header {
        background-color: #007bff;
        color: white;
    }

    .btn-link {
        color: #007bff;
    }

        .btn-link:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>
