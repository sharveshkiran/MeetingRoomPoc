@model IEnumerable<MeetingRoomBooking.Models.MeetingRoom>

<div class="container">
    <!-- Header section with logout button on the right -->
    <div class="row">
        <div class="col-md-6">
            <h1>Meeting Rooms</h1>
            <br />
            <h3>Welcome, @User.Identity.Name!</h3>
        </div>
    </div>

    <!-- Actions section -->
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <a asp-controller="Bookings" asp-action="Index" class="btn btn-secondary">Make Bookings</a>
    </p>

    <!-- Meeting rooms table -->
    <table class="table">
        <thead>
            <tr>
                <th>Room Name</th>
                <th>Location</th>
                <th>Room Capacity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td>@item.Capacity</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this meeting room?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
